<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
          xmlns:mx="library://ns.adobe.com/flex/mx">

    <fx:Metadata>
        [Event(name = "operationTypeChanged", type = "random.events.OperationTypeEvent")]
    </fx:Metadata>

  <mx:LinkBar color="0x0050AA" horizontalAlign="center" width="100%" fontWeight="bold"
              dataProvider="{MergeSplitViewStack}" borderColor="0xACACAC" borderStyle="solid"
              itemClick="linkBar1_itemClickHandler(event)"/>

  <!-- Define the ViewStack and the three child containers -->
  <mx:ViewStack id="MergeSplitViewStack" borderStyle="solid" width="100%" height="100%">

    <s:NavigatorContent id="mergeMav" name="merge" label="我要合并" backgroundColor="0xDCDCDC" fontWeight="bold">
      <s:layout>
        <s:VerticalLayout horizontalAlign="center" />
      </s:layout>

      <s:TextArea width="100%" height="100%" id="mergedDatArea"/>
    </s:NavigatorContent>

    <s:NavigatorContent id="splitNav" name="split" label="我要拆分" backgroundColor="0xDCDCDC" width="100%" height="100%">

      <s:layout>
        <s:VerticalLayout horizontalAlign="center" />
      </s:layout>

        <s:TextArea width="100%" height="100%" id="spliTextArea"/>
    </s:NavigatorContent>

  </mx:ViewStack>

    <fx:Script><![CDATA[
        import mx.events.ItemClickEvent;

        import random.events.OperationTypeEvent;

        private function linkBar1_itemClickHandler(event:ItemClickEvent):void {
            var opChangeEvent:OperationTypeEvent = new OperationTypeEvent("operationTypeChanged", event.item.name);
            dispatchEvent(opChangeEvent);
        }
        ]]></fx:Script>
</s:VGroup>
